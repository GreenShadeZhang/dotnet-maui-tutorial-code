<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Loaded="MainPage_OnLoaded"
    x:Class="Verdure.Braincase.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AnalogClock.Controls">
    <ContentPage.Content>
        <Grid>

            <Border Content="{Binding CustomClock,Mode=OneWay}"></Border>
            <!--<controls:Clock2 />-->
                  <Label Padding="0,120,0,0" TextColor="{Binding FontColor,Mode=OneWay}" FontSize="48"
                    HorizontalOptions="Center"
               VerticalOptions="Center" Text="{Binding Title,Mode=OneWay}"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>
